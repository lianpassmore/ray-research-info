---
interface Props {
	prev?: { href: string; label: string };
	next?: { href: string; label: string };
}
const { prev, next } = Astro.props;
---

<nav class="flex items-center justify-between pt-12 border-t border-charcoal/10 mt-12">
	{prev ? (
		<a href={prev.href} class="btn-ghost text-sm">
			← {prev.label}
		</a>
	) : <div />}
	{next ? (
		<a href={next.href} class="btn-ghost text-sm">
			{next.label} →
		</a>
	) : <div />}
</nav>
