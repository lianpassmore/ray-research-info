---
// src/layouts/Layout.astro
import '../styles/global.css';
import Nav from '../components/Nav.astro';
import ContactFooter from '../components/ContactFooter.astro';

interface Props {
	title?: string;
	showNav?: boolean;
	currentPage?: string;
}

const {
	title = 'RAY - Participant Resource Guide',
	showNav = true,
	currentPage = '',
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="RAY Research Pilot - Participant Resource Guide. February 12-26, 2026." />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class:list={["page-container font-sans antialiased", { "pt-20": showNav }]}>
		{showNav && <Nav currentPage={currentPage} />}
		<slot />
		<ContactFooter />
		<script>
			function syncAccordions(mq: MediaQueryList | MediaQueryListEvent) {
				document.querySelectorAll<HTMLDetailsElement>('details.accordion-item').forEach(d => {
					d.open = mq.matches;
				});
			}
			const mq = window.matchMedia('(min-width: 768px)');
			syncAccordions(mq);
			mq.addEventListener('change', syncAccordions);
		</script>
	</body>
</html>
